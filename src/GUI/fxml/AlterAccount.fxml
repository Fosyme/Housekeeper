<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="604.0" prefWidth="429.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controller.AlterAccountController">
   <children>
      <VBox layoutX="56.0" layoutY="14.0" prefHeight="590.0" prefWidth="339.0">
         <children>
            <Label alignment="CENTER" prefHeight="41.0" prefWidth="320.0" text="修改订单" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="81.0" prefWidth="339.0">
               <children>
                  <Label text="类型：    " />
                  <RadioButton fx:id="outputRadioButton" alignment="CENTER_RIGHT" lineSpacing="50.0" mnemonicParsing="false" onAction="#outputRadioButtonEvent" selected="true" text="支出" wrapText="true">
                     <HBox.margin>
                        <Insets right="75.0" />
                     </HBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="cate" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="inputRadioButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#inputRadioButtonEvent" text="收入" toggleGroup="$cate">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </RadioButton>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="81.0" prefWidth="339.0">
               <children>
                  <Label text="金额：" />
                  <TextField fx:id="moneyTextField" prefHeight="30.0" prefWidth="273.0" promptText="请输入金额" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="87.0" prefWidth="339.0">
               <children>
                  <Label text="分类：" />
                  <ComboBox fx:id="classificationComboBox" editable="true" onAction="#classificationComboBoxEvent" prefHeight="30.0" prefWidth="273.0" promptText="请选择分类" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="78.0" prefWidth="339.0">
               <children>
                  <Label text="备注：" />
                  <TextArea fx:id="memoTextArea" minHeight="0.0" minWidth="0.0" prefHeight="41.0" prefWidth="272.0" promptText="请输入备注：">
                     <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </HBox.margin>
                  </TextArea>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="88.0" prefWidth="339.0">
               <children>
                  <Label text="日期：" />
                  <DatePicker fx:id="datePickerText" editable="false" prefHeight="30.0" prefWidth="273.0" promptText="请选择日期" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Button fx:id="alterButton" alignment="CENTER" mnemonicParsing="false" onAction="#alterButtonEvent" prefHeight="47.0" prefWidth="165.0" text="更改" textAlignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
